      <form
        action="https://formsubmit.co/your-email@example.com"
        method="POST"
        class="contact-form"
      >
        <!-- FormSubmit configuration -->
        <input
          type="hidden"
          name="_subject"
          value="Nuevo mensaje desde Voces de la Extinción"
        />
        <input type="hidden" name="_captcha" value="false" />
        <input type="hidden" name="_template" value="table" />

        <div class="form-group">
          <label for="email">Correo electrónico</label>
          <input
            type="email"
            name="email"
            id="email"
            required
            placeholder="tu@email.com"
          />
        </div>

        <div class="form-group">
          <label for="message">Mensaje</label>
          <textarea
            name="message"
            id="message"
            rows="6"
            required
            placeholder="Escribe tu mensaje aquí..."></textarea>
        </div>

        <button type="submit" class="submit-btn">Enviar</button>
      </form>
    </section>

    <!-- Map Section -->
    <section class="map-section">
      <h2>Nuestra ubicación</h2>
      <div class="map-container">
        <iframe
          width="600"
          height="450"
          src="https://maps.google.com/maps?width=100%&height=100%&hl=en&q=rio ceballos, AR&t=&z=14&ie=UTF8&iwloc=B&output=embed"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Nuestra ubicación"></iframe>
      </div>
    </section>
  </div>
</Layout>

<style>
  .contact-container {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    padding: 2rem 0;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    text-align: center;
    color: var(--white);
    margin-bottom: 1rem;
    font-size: 2.5rem;
  }

  h2 {
    color: var(--white);
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
  }

  .heading-with-icons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .leaf-icon {
    width: 2rem;
    height: 2rem;
    color: var(--white);
    flex-shrink: 0;
  }

  .leaf-icon.mirrored {
    transform: scaleX(-1);
  }

  .contact-form-section,
  .map-section {
    padding: 2rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    color: var(--white);
    font-weight: 600;
    font-size: 1rem;
  }

  input[type="email"],
  textarea {
    padding: 0.75rem;
    border: 2px solid var(--light);
    background-color: var(--dark);
    color: var(--light);
    font-family: var(--font-sans-serif);
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  input[type="email"]:focus,
  textarea:focus {
    outline: none;
    border-color: var(--white);
    color: var(--white);
  }

  input[type="email"]::placeholder,
  textarea::placeholder {
    color: rgba(14, 138, 65, 0.7);
  }

  textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-btn {
    background-color: var(--light);
    color: var(--white);
    border: none;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition:
      background-color 0.3s ease,
      transform 0.2s ease;
    align-self: center;
  }

  .submit-btn:hover {
    background-color: #0a6b33;
    transform: translateY(-2px);
  }

  .submit-btn:active {
    transform: translateY(0);
  }

  .map-container {
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .map-container iframe {
    display: block;
    width: 100%;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .contact-container {
      padding: 1rem;
      gap: 2rem;
    }

    .contact-form-section,
    .map-section {
      padding: 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.5rem;
    }
  }
</style>
