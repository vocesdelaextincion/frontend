---
import Layout from '../layouts/Layout.astro';
import TeamSection from '../components/Interactive/TeamSection/TeamSection.jsx';
import { teamMembers } from '../components/Interactive/TeamSection/TeamSection.jsx';
---

<Layout background="dark">
    <main class="page">
        <div class="hide-on-mobile">
            <TeamSection client:load />
        </div>
        <div class="hide-on-desktop">
            <div class="mobile-cards-container">
                {teamMembers.map((member) => (
                    <div class="team-card">
                        <img src={member.image} alt={member.name} class="card-image" />
                        <div class="card-content">
                            <h3 class="card-name">{member.name}</h3>
                            <p class="card-subtitle">{member.subtitle}</p>
                            <p class="card-description">{member.description}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </main>
</Layout>

<style>
    .page {
        padding: 1rem 0;
        min-height: 100vh;
        margin: 0 auto;
    }

    .hide-on-desktop {
        display: none;
    }

    .mobile-cards-container {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 1rem;
        max-width: 500px;
        margin: 0 auto;
    }

    .team-card {
        background-color: white;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .card-image {
        width: calc(100% - 2rem);
        height: auto;
        display: block;
        margin: 1rem;
    }

    .card-content {
        display: block;
        padding: 0 1.5rem 1.5rem 1.5rem;
        text-align: center;
        width: 100%;
        box-sizing: border-box;
    }

    .card-name {
        font-size: 1.25rem;
        font-weight: bold;
        margin: 0 0 0.5rem 0;
        color: #333;
    }

    .card-subtitle {
        font-size: 0.95rem;
        color: #666;
        margin: 0 0 1rem 0;
        font-style: italic;
    }

    .card-description {
        font-size: 0.9rem;
        line-height: 1.6;
        color: #555;
        margin: 0;
    }

    /* Mobile breakpoint: 768px and below */
    @media (max-width: 768px) {
        .page {
            padding: 0.5rem;
            min-height: 100vh;
        }

        .hide-on-mobile {
            display: none;
        }

        .hide-on-desktop {
            display: block;
        }
    }
</style>

