---
import Layout from '../layouts/Layout.astro';
import TeamSection from '../components/Interactive/TeamSection/TeamSection.jsx';
---

<Layout background="dark">
    <main class="page">
        <TeamSection client:load />
    </main>
</Layout>

<style>
    .page {
        padding: 1rem 0;
        min-height: 100vh;
        margin: 0 auto;
    }

    /* Mobile breakpoint: 768px and below */
    @media (max-width: 768px) {
        .page {
            padding: 0.5rem;
            min-height: 100vh;
        }
    }
</style>

